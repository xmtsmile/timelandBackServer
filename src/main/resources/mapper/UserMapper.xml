<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.note.mapper.UserMapper">

    <select id="findByName" resultType="com.study.note.entity.User">
            select * from user
            where user_name = #{name}
    </select>

    <select id="findById" resultType="com.study.note.entity.User">
        select * from user
        where id = #{id}
    </select>
</mapper>